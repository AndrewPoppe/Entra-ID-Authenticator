{
    "name": "Yale REDCap Authenticator",
    "namespace": "YaleREDCap\\YaleREDCapAuthenticator",
    "description": "This External Module enables SSO using Yale CAS and YNHH ADFS.",
    "authors": [
        {
            "name": "Andrew Poppe",
            "email": "andrew.poppe@yale.edu",
            "institution": "Yale University"
        }
    ],
    "system-settings": [
        {
            "key": "entraid-yale-section",
            "name": "<div class='cas-descriptive p-2' style='background-color:#84cbe4; border: 1px solid #537f8f; border-radius: 0.375rem; text-align: center;'><strong>Yale Entra ID Details</strong><br></div>",
            "type": "descriptive"
        },
        {
            "key": "entraid-yale-ad-tenant-id",
            "name": "<strong>Yale Entra ID AD Tenant ID</strong>",
            "type": "text"
        },
        {
            "key": "entraid-yale-client-id",
            "name": "<strong>Yale Entra ID Client ID</strong>",
            "type": "text"
        },
        {
            "key": "entraid-yale-client-secret",
            "name": "<strong>Yale Entra ID Client Secret</strong>",
            "type": "password"
        },
        {
            "key": "entraid-yale-redirect-url",
            "name": "<strong>Yale Entra ID Redirect URL</strong>",
            "type": "text"
        },
        {
            "key": "entraid-yale-redirect-url-spa",
            "name": "<strong>Yale Entra ID Redirect URL for SPA</strong>",
            "type": "text"
        },
        {
            "key": "entraid-yale-logout-url",
            "name": "<strong>Yale Entra ID Logout URL</strong>",
            "type": "text"
        },
        {
            "key": "cas-user-details-section",
            "name": "<div class='cas-descriptive p-2' style='background-color:lightcoral; border: 1px solid red; border-radius: 0.375rem; text-align: center;'><strong>CAS User Details</strong><br>These settings are used to map the CAS user details to the REDCap user details. They won't be useful outside of Yale University.</div>",
            "type": "descriptive"
        },
        {
            "key": "cas-user-details-url",
            "name": "<strong>CAS User Details URL</strong>:<br>User {userid} as a placeholder for the username of the person to grab details about",
            "type": "text"
        },
        {
            "key": "cas-user-details-token",
            "name": "<strong>CAS User Details Token</strong>:<br>Token to use to authenticate with the CAS User Details URL",
            "type": "password"
        },
        {
            "key": "cas-check-affiliation",
            "name": "<strong>Check Affiliation</strong>:<br>Check this if you want to check the affiliation of the Yale University user against a list of allowed affiliations. Common affiliations are STUDENT, FACULTY, STAFF, EMPLOYEE, MEMBER, AFFILIATE, ALUM",
            "type": "checkbox"
        },
        {
            "key": "cas-allowed-affiliations",
            "name": "<strong>Allowed Affiliations</strong>:<br>Which Yale University affiliations should be allowed to log in? If left blank, all affiliations are allowed. <span class='text-dangerrc'>This setting supercedes the forbidden affiliations setting</span>",
            "type": "text",
            "repeatable": true,
            "branchingLogic": {
                "field": "cas-check-affiliation",
                "value": "1"
            }
        },
        {
            "key": "cas-forbidden-affiliations",
            "name": "<strong>Forbidden Affiliations</strong>:<br>Which Yale University affiliations should be forbidden from logging in? If left blank, no affiliations are forbidden. <span class='text-dangerrc'>If the allowed affiliations setting is set, this setting will be ignored</span>",
            "type": "text",
            "repeatable": true,
            "branchingLogic": {
                "field": "cas-check-affiliation",
                "value": "1"
            }
        }
    ],
    "auth-ajax-actions": [
        "getUserType",
        "convertTableUserToCasUser",
        "convertCasUsertoTableUser"
    ],
    "no-auth-pages": [
        "YNHH_SAML_ACS",
        "yale_sso_login",
        "logout"
    ],
    "no-csrf-pages": [
        "YNHH_SAML_ACS"
    ],
    "enable-no-auth-logging": true,
    "enable-every-page-hooks-on-system-pages": true,
    "framework-version": 14,
    "compatibility": {
        "redcap-version-min": "13.7.0",
        "redcap-version-max": "",
        "php-version-min": "7.4.00",
        "php-version-max": "8.3.99"
    }
}