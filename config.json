        "convertTableUserToEntraIdUser",
        "convertTableUsersToEntraIdUsers",
        "convertEntraIdUsertoTableUser",
        "convertEntraIdUsersToTableUsers",
        "getEntraIdUsers",
        "handleAttestation"
